<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.andresserrano.marvelheroes.HeroDetailFragment"
    tools:background="#504a4a">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/heroDetailTitleTextView"
        tools:text="Hulk"
        android:textSize="32sp"
        android:textColor="@color/colorText"
        android:textStyle="normal|bold"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/heroDetailTitleTextView"
        android:id="@+id/baseLinearLayout">

        <ImageView
            app:srcCompat="@color/colorPrimaryDark"
            android:id="@+id/heroDetailThumbnailTextView"
            android:layout_height="300dp"
            android:adjustViewBounds="true"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/heroDetailCopyrightTextView"
            android:textSize="18sp"
            tools:text="Copyright Marvel"
            android:textColor="@color/colorText"
            android:gravity="center"
            android:text="@string/copyright_marvel"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/heroDetailDescriptionTextView"
        android:layout_below="@+id/baseLinearLayout"
        android:textColor="@color/colorText"
        android:layout_margin="8dp"
        tools:text="Nobody messes with the Hulk"
        android:textSize="24sp"/>

</RelativeLayout>
